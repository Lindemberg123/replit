entrypoint = "server.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["python3", "server.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Start Gmail API Server"

[[workflows.workflow]]
name = "Start Gmail API Server"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"

[[ports]]
localPort = 5000
externalPort = 80
